<a id="login" class="button is-white" data-target="modal-login" onclick="DisplayLoginModal()">
    Log in
</a>
<!-- Login modal -->
<div class="modal" id="modal-login" method="post">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Login</p>
            <button class="delete" aria-label="close" onclick="RemoveLoginModal()"></button>
        </header>
        <section class="modal-card-body">
            <form method="post" asp-controller="Home" asp-action="Login">
                <div class="field">
                    <label class="label">Email</label>
                    <div class="control has-icons-left has-icons-right">
                        <input id="email-input-login" name="email" class="input" type="email" placeholder="Email" onchange="IsValidEmailLogin(this)">
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <span class="icon is-small is-right">
                            <i id="login-warning-icon" class="fas"></i>
                        </span>
                    </div>
                    <p id="login-email-validator-help" class="help"></p>
                </div>
                <div class="field">
                    <p class="control has-icons-left">
                        <input id="password" class="input" type="password" placeholder="Password">
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </p>
                </div>
                <footer class="modal-card-foot">
                    <button class="button is-danger" type="submit">Login</button>
                </footer>
            </form>
        </section>
    </div>
</div>